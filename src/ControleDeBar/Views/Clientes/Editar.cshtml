@model Cliente


<h1>Editar Cliente</h1>

<form method='post' action='/clientes/editar'>
    <input type='hidden' id='index' name='index' value='@ViewBag.Index'>

    <div class="mb-3">
        <label for="id" class="form-label">Id</label>
        <input class="form-control" type='text' id='id' name='id' value='@Model.Id'>
    </div>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input class="form-control" type='text' id='nome' name='nome' value='@Model.Nome'>
        @if (ViewBag.Error != string.Empty)
        {
            <p> @ViewBag.Error </p>
        }
    </div>
    <button class="btn btn-primary" type='submit'> Editar </button>
</form>

