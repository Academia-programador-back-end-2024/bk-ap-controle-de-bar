@model BarControl.Model.Slip

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Slip</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Table)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Table.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Waiter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Waiter.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OpeningDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpeningDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClosingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
    </dl>
    
</div>

<h3>Consumptions</h3>
<table class="tabl table-stripped mb-3">
    <thead>
    <tr>
        <th>Product</th>
        <th>Amount</th>
        <th>Unit price</th>
        <th>Total price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var consumption in Model.Consumptions)
    {
        <tr>
            Edition and deletion
            <td>@consumption.Product.Name</td>
            <td>@consumption.Amount</td>
        </tr>
    }
    </tbody>
</table>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
