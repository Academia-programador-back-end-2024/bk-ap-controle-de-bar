@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BarControl.Model.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@typeof(Product).Name - @Model.Name</h4>
    <hr />
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(@model => model.Id)</th> @**@
            <th>@Html.DisplayNameFor(@model => model.Name)</th>
            <th>@Html.DisplayNameFor(@model => model.PurchasePrice)</th>
            <th>@Html.DisplayNameFor(@model => model.SellingValue)</th>
        </tr>

        <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.PurchasePrice</td>
            <td>@Model.SellingValue</td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </td>
        </tr>
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
